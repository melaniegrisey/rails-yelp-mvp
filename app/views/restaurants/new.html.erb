<body class="container">
  <h1>Add a restaurant</h1>
  <%= form_for(@restaurant) do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.label :address %>
    <%= f.text_field :address %>
    <%= f.label :phone_number %>
    <%= f.phone_field :phone_number %>
      <%= f.label :category %>
    <%= f.select :category, category: ["chinese", "italian", "japanese", "french", "belgian"] %>
    <%= f.submit %>
  <% end %>
   <hr>
  <%= link_to restaurants_path do %> Back to restaurants <% end %>
</body>